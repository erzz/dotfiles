{
  "assistant": {
    "default_model": {
      "model": "claude-3.5-sonnet",
      "provider": "copilot_chat"
    },
    "version": "2"
  },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 18.5,
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  "chat_panel": {
    "button": "when_in_call"
  },
  "collaboration_panel": {
    "button": false
  },
  "diagnostics": {
    "include_warnings": false
  },
  "edit_predictions": {
    "disabled_globs": [
      ".env",
      "test.go",
      ".md",
      "diagram.dsl"
    ]
  },
  "experimental.theme_overrides": {
    "border": "#373745",
    "tab_bar.background": "#1E1E2E",
    "tab.inactive_background": "#373745"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "file_finder": {
    "modal_width": "medium"
  },
  "file_types": {
    "Dockerfile": [
      "Dockerfile",
      "Dockerfile.*"
    ],
    "Helm": [
      "**/templates/*.yaml",
      "**/templates/*.yml"
    ],
    "JSON": [
      "json",
      "jsonc",
      "*.code-snippets"
    ]
  },
  "format_on_save": "on",
  "formatter": "language_server",
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  "git_panel": {
    "dock": "right"
  },
  "gutter": {
    "code_actions": false,
    "folds": true,
    "line_numbers": true,
    "runnables": false
  },
  "hard_tabs": false,
  "indent_guides": {
    "coloring": "indent_aware",
    "enabled": true
  },
  "inlay_hints": {
    "enabled": true
  },
  "languages": {
    "Go": {
      "hard_tabs": true
    },
    "JavaScript": {
      "formatter": {
        "external": {
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ],
          "command": "prettier"
        }
      },
      "tab_size": 2
    },
    "Markdown": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ],
          "command": "/opt/homebrew/bin/prettierd"
        }
      }
    },
    "Python": {
      "format_on_save": {
        "language_server": {
          "name": "ruff"
        }
      },
      "formatter": {
        "language_server": {
          "name": "ruff"
        }
      },
      "language_servers": [
        "pyright",
        "ruff"
      ]
    },
    "Shell Script": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "arguments": [
            "--filename",
            "{buffer_path}",
            "--indent",
            "2"
          ],
          "command": "shfmt"
        }
      }
    },
    "TypeScript": {
      "formatter": {
        "external": {
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ],
          "command": "prettier"
        }
      },
      "inlay_hints": {
        "enabled": true,
        "show_other_hints": true,
        "show_parameter_hints": false,
        "show_type_hints": true
      },
      "tab_size": 2
    }
  },
  "line_indicator_format": "short",
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": [
          "class",
          "className",
          "ngClass",
          "styles"
        ]
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "format": {
            "singleQuote": false
          },
          "keyOrdering": false,
          "schemas": {}
        }
      }
    }
  },
  "notification_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "preferred_line_length": 100,
  "preview_tabs": {
    "enable_preview_from__file_finder": false,
    "enable_preview_from_code_navigation": false,
    "enabled": false
  },
  "project_panel": {
    "auto_fold_dirs": true,
    "button": true,
    "dock": "left",
    "git_status": true,
    "indent_size": 20
  },
  "relative_line_numbers": true,
  "scrollbar": {
    "diagnostics": "none",
    "git_diff": true,
    "search_results": false,
    "selected_symbol": false
  },
  "tab_bar": {
    "git_status": true,
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "errors"
  },
  "task": {
    "show_status_indicator": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "button": true,
    "copy_on_select": true,
    "cursor_shape": null,
    "default_height": 320,
    "default_width": 640,
    "dock": "bottom",
    "env": {
      "EDITOR": "zed --wait"
    },
    "line_height": "comfortable",
    "option_as_meta": false,
    "shell": {
      "program": "zsh"
    },
    "toolbar": {
      "breadcrumbs": false,
      "title": false
    },
    "working_directory": "current_project_directory"
  },
  "theme": {
    "dark": "Catppuccin Mocha",
    "light": "Catppuccin Mocha",
    "mode": "system"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "ui_font_size": 18,
  "vim": {
    "enable_vim_sneak": true
  },
  "vim_mode": true
}
